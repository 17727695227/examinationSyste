@CHARSET "UTF-8";
*{
	margin:0;
	padding:0;
}
body{
	 width:100%;
	 height:100%;
	 font-family:微软雅黑;
	 color:black;
	 font-size:18px; 
	 position:relative;	 
}

.registerlogo{
	width:100%;
	height:12%;
	background:#6F5499;
	box-shadow: 0px 3px rgba(10,10,10,0.2);
	position:relative;
}
.logotitle{	 
	 font-size:44px;
	 color:#FFFFFF;
	 left:12%;
	 top:12%;
	 position:relative; 
}

.registerhead{
	width:100%;
	height:15%;
	//background:gray;
	box-shadow: 0px 3px rgba(10,10,10,0.2);
	position:relative;
}
.headtitle{
	display:block;
	width:10%;
	height:44px;
	font-size:25px;
	color:black;
	text-align:center;
	bottom:0;
	left:28%;
	//background:gray;
	position:absolute;
}
.line{
	 display:block;
	 width:22%;
	 height:3px;
	 background:#6F5499;
	 bottom:-3px;
	 left:21.4%;
	 position:absolute;
}
.triangle{
	      width:0;
          height:0;
          left:50%;
          bottom:2px;
          border:7px solid transparent;
          border-bottom-color:#6F5499;
          position:absolute;
}

.registermain{
	         width:100%;
	         position:relative;
}
.registerform{
	          width:60%;
	          height:50%;
	          font-size:18px;
	          font-weight:200;
	          color:black;
	          //background:gray;
	          margin-top:3.5%;
	          margin-left:19.4%;
	          position:relative;          
}
.registerinput,.registerinput2{
					           width:28%;
					           height:11%;
					           font-size:12px;
	                           color:#A9A9A9;
					           margin-top:8px;
					           border:1px solid black;
					           position:relative;   
}
.registerinput2{
	           width:13%;	            
}
.registerimg{
	         width:13%;
	         height:10%;
	         left:1.5%;
	         vertical-align:middle;
	         opacity:0.6;
	         position:relative;
}
.registersubmit{
	           width:28%;
		       height:11%;
		       font-size:18px;
		       font-weight:200;
		       background:rgba(200,200,200,0.4);
		       border:1px solid black;
		       margin-left:12%;
		       margin-top:5%;
		       position:relative;
}



                                           
.white{
	  color:white;
	  font-size:18px;
	  vertical-align:middle;
	  }
.green{
	  color:green;
	  font-size:18px;
	  vertical-align:middle;
	  }
.red{
	  color:red;
	  vertical-align:middle;
	  font-size:18px;
	}


